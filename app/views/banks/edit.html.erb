<div class="box">
  <div class="form">
    <%= form_for(@bank) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :bank_name %>
      <%= f.text_field :bank_name, class: 'form-control' %>

      <%= f.label :interest_rate, "Interest rate (%)" %>
      <%= f.number_field :interest_rate,  in: 0.1..5000, step: 0.01, class: 'form-control' %>

      <%= f.label :maximum_loan, "Maximum loan ($)" %>
      <%= f.number_field :maximum_loan, in: 1..500000000000, step: 0.01, class: 'form-control' %>

      <%= f.label :minimum_down_payment, "Minimum down payment (%)" %>
      <%= f.number_field :minimum_down_payment, in: 0..100, step: 0.01, class: 'form-control' %>

      <%= f.label :loan_term, "Loan term (months)" %>
      <%= f.number_field :loan_term, in: 1..240, step: 1, class: 'form-control' %>
      <br>
      <%= f.submit 'Update', class: "btn btn-outline-success" %>
    <% end %>
  </div>
</div>
